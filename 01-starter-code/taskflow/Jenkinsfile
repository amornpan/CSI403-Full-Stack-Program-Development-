// Jenkinsfile - TaskFlow CI/CD Pipeline
pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'taskflow'
        CONTAINER_NAME = 'taskflow-app'
        APP_PORT = '8000'
        NETWORK_NAME = 'taskflow-network'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "‚úÖ Code checked out"
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r requirements.txt
                    pip install pytest pytest-cov
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                sh '''
                    . venv/bin/activate
                    pytest --cov=app --cov-report=xml -v --junitxml=test-results.xml || true
                '''
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'test-results.xml'
                }
            }
        }
        
        stage('Build Docker Image') {
            when {
                branch 'main'
            }
            steps {
                sh "docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} ."
                sh "docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest"
                echo "‚úÖ Docker image built"
            }
        }
        
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                sh '''
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        --network ${NETWORK_NAME} \
                        -p ${APP_PORT}:8000 \
                        --restart unless-stopped \
                        ${IMAGE_NAME}:latest
                '''
                echo "‚úÖ Container deployed"
            }
        }
        
        stage('Health Check') {
            when {
                branch 'main'
            }
            steps {
                sh '''
                    sleep 10
                    curl -f http://localhost:${APP_PORT}/health || exit 1
                    echo "‚úÖ App is healthy!"
                '''
            }
        }
    }
    
    post {
        success {
            echo 'üéâ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
        always {
            cleanWs()
        }
    }
}
